package co.com.home.cucumber.utilidadesbd;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;
import java.sql.Statement;

public class Utilidadesbd {

	public static void ejecutarSentencia(String sentencia){
		
		
		try {
			
			Class.forName("com.mysql.jdbc.Driver");
			Connection conexion= DriverManager.getConnection("jdbc:mysql://192.168.1.70:3306/tac", "toor", "1234567");
			Statement state=conexion.createStatement();
			state.executeUpdate(sentencia);
			
		} catch (ClassNotFoundException e) {
			e.printStackTrace();
		} catch (SQLException e) {
			e.printStackTrace();
		}
		
	}
	

	public static void main(String[] args) {
		//String sentencia = "INSERT INTO empleados (empleado_cedula, empleado_nombre, empleado_estado, empleado_area_id) VALUES ('111', 'DANIEL DD', '1', '3')";
//		String sentencia = "DELETE FROM empleados WHERE empleado_cedula = '1036926'";		
//		Utilidadesbd.ejecutarSentencia(sentencia);
		
		
		
		String sentencia2= "DELETE FROM centros_de_costos WHERE cdc_proyecto_id = '22'";
		Utilidadesbd.ejecutarSentencia(sentencia2);
		
		
		String sentencia1= "DELETE FROM clientes WHERE cliente_id = 44";
		Utilidadesbd.ejecutarSentencia(sentencia1);
		
		String sentencia = "DELETE FROM areas WHERE area_id = '95'";
		Utilidadesbd.ejecutarSentencia(sentencia);
	}
	

	
}
